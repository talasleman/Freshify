<div class="card p-3" style="max-width: 70vh;">

  <%= form_with(model: product, html: { class: 'needs-validation', novalidate: '' }) do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", style: "width: auto;"%>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control"%>
  </div>

 <div class="mb-3">
  <%= form.label :price, class: "form-label" %>
  <div class="d-flex align-items-center">
    <%= form.text_field :price, class: "form-control", style: "width: auto; display: inline-block;" %> 
    <span class="ms-2">$</span>
  </div>
</div>


  <div class="mb-3">
    <%= form.label :category, class: "form-label" %>
    <%= form.select :category, [["Select an option", ""], ["Meat", "Meat"], ["Dairy", "Dairy"], ["Vegetables", "Vegetables"], ["Fruits", "Fruits"]], {}, { class: "form-select", required: true } %>
  </div>

  <div class="mb-3">
    <%= form.label :image_url, class: "form-label" %>
    <%= form.text_field :image_url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :quantity, class: "form-label" %>
    <%= form.number_field :quantity, class: "form-control", style: "width: auto;" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>

</div>




